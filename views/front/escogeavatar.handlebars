  <body cz-shortcut-listes="true">

       <div class="titulo-avatar" >
      <img src="/img/escoge-personaje.png" class="img-responsive">
      </div>

      <div class="container-sonido">
      <img id="sonido"  src="../img/question.gif" alt="" >
          </div>
      <audio id="background-music" loop>
          <source  type="audio/wav" src="../audio/music-background.mp3">
      </audio>

      <audio id="elige-personaje" >
          <source  type="audio/wav" src="../audio/elige-personaje.mp3">
      </audio>

    <div class="avatar-container " id="avatar">
      <div class="row">

          <div class="container-fluid col-md-12 avataresIndex" id="contenAvatares" style="visibility:hidden;">
{{#each objUsers}}
<div class="misavatares" id="avatares" >
<h4 class="puntaje" style="font-family:monospace; color:white; font-weight:900; font-size:20px;">{{puntos}} Puntos</h4>
<a href="/video"><img onclick="sesion({{id}})" src ="{{foto}}" class="rounded-circle personalImg"/></a>

<h5 class="puntaje" style="font-family:monospace; color:white; font-weight:900; font-size:20px;">{{nombre}}</h5>
</div>



{{/each}}

          </div>
        </div>



      <div class="button-container " id="button-container-escoger">
<div class="row">


        <div class="col-md-4">
        <button id="export-button" type="button" class="btn btn-warning" style="background-color:darkolivegreen">
                <a id="" href="/login" style="color:white; font-weight: 600;">Administrar</a></button>
     </div>
           <div class="col-md-4">
           <button id="export-button" type="button" class="btn btn-warning" style="background-color:darkolivegreen; visibility:hidden;">
                   <a id="descargarjson" href="#" style="color:white; font-weight: 600;">Exportar JSON</a></button>
        </div>

           <div class="col-md-4">
           <button id="export-button" type="button" class="btn btn-warning" style="background-color:darkolivegreen;" > <a id="" href="/verRanking" style= "color:white; font-weight: 600;">Ver Ranking Partidas</a></button>
        </div>
</div>
  </div>
  </div>



<style>

  @media only screen and (max-width: 768px) {
    /* For mobile phones: */

    [id="contenAvatares"] {

        display:inline-block;
        width:100%;
        position:relative;
        float: left;

    }
    [id="button-container-escoger"] {

        display:inline-block;
        width:100%;
        position:relative;
        float: left;

    }

}

</style>

